DROP TABLE IF EXISTS tb_USUARIO, tb_ENDERECO, tb_PRODUTO, tb_PEDIDO_PRODUTO, tb_FAVORITO;

CREATE TABLE tb_USUARIO (
    us_ID INT PRIMARY KEY AUTO_INCREMENT,
    us_IMG VARCHAR(255),
    us_NOME VARCHAR(255) NOT NULL,
    us_EMAIL VARCHAR(255) UNIQUE NOT NULL,
    us_CPF VARCHAR(14) UNIQUE NOT NULL,
    us_NUM VARCHAR(14),
    us_NASC DATE,
    us_PASS VARCHAR(36) NOT NULL,
    us_FUNCAO VARCHAR(255) NOT NULL,
    us_STATUS BOOLEAN NOT NULL DEFAULT TRUE
);

INSERT INTO tb_USUARIO VALUES (1, NULL, 'ADMIN', 'ADMIN@musical', '00000000000', NULL, NULL, 'ADMIN', 'ADMIN', TRUE);

CREATE TABLE tb_ENDERECO (
    end_id INT PRIMARY KEY AUTO_INCREMENT,
    end_us_ID INT NOT NULL,
    end_CIDADE VARCHAR(255),
    end_BAIRRO VARCHAR(255),
    end_RUA VARCHAR(255),
    end_NUMERO VARCHAR(255),
    end_COMP VARCHAR(255),
    end_us_COUNT INT NOT NULL
);

CREATE TABLE tb_PRODUTO (
    pro_ID INT PRIMARY KEY AUTO_INCREMENT,
    pro_IMG VARCHAR(255),
    pro_NOME VARCHAR(255) UNIQUE NOT NULL,
    pro_DESC VARCHAR(255) NOT NULL,
    pro_DATA_CADASTRO DATE NOT NULL,
    pro_VAL DECIMAL(12,5) NOT NULL,
    pro_FAVORITO INT
);

CREATE TABLE tb_PEDIDO_PRODUTO (
    pe_ID INT PRIMARY KEY,
    pe_pro_ID INT NOT NULL,
    pe_QNT INT NOT NULL
);

CREATE TABLE tb_FAVORITO (
    fav_pro_ID INT NOT NULL,
    fav_us_ID INT NOT NULL
);

SELECT * FROM TB_USUARIO;